<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTableColumn?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top area (can be like a title bar) -->
    <top>
        <BorderPane prefHeight="37.0" prefWidth="600.0" style="-fx-background-color: #3399FF;" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="0" left="20" right="20" top="0" />
            </padding>
            <!-- LEFT SIDE -->
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <ImageView fx:id="logoImage" fitHeight="30" fitWidth="30" />
               <MFXButton onAction="#btnBack" text="Back" />
                </HBox>
            </left>

            <!-- CENTER -->
            <center>
                <HBox alignment="CENTER" spacing="10.0">
                    <Label fx:id="lblOrderNumber" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Order #12345" />
               <MFXButton onAction="#btnRefresh" text="Refresh" />
                </HBox>
            </center>

            <!-- RIGHT SIDE -->
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Label fx:id="lblEmployee" style="-fx-font-size: 14px;" text="Logged in as: User" />
               <MFXButton onAction="#btnLogout" text="Logout" />
                </HBox>
            </right>

        </BorderPane>
    </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <right>
            <HBox prefHeight="258.0" prefWidth="55.0" BorderPane.alignment="CENTER" />
         </right>
         <left>
            <HBox alignment="CENTER" prefHeight="362.0" prefWidth="298.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXTableView footerVisible="false" prefHeight="323.0" prefWidth="203.0" HBox.hgrow="ALWAYS">
                      <tableColumns>
                          <MFXTableColumn fx:id="colFName" text="First Name" />
                          <MFXTableColumn fx:id="colLName" text="Last Name" />
                      </tableColumns>
                  </MFXTableView>
               </children></HBox>
         </left>
      </BorderPane>
   </center>

</BorderPane>
