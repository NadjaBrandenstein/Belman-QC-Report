<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.Image?>
<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="/dk/easv/belmanqcreport/CSS/CSS.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.belmanqcreport.GUI.Controller.OperatorController">

    <!-- Top area (can be like a title bar) -->
    <top>
        <BorderPane prefHeight="38.0" prefWidth="600.0" style="-fx-background-color: #004b88;" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="0" left="20" right="20" top="0" />
            </padding>
            <!-- LEFT SIDE -->
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <ImageView fx:id="logoImage" fitHeight="30" fitWidth="30" />
               <MFXButton onAction="#btnBack" text="Back" />
                </HBox>
            </left>

            <!-- CENTER -->
            <center>
                <HBox alignment="CENTER" spacing="10.0">
                    <Label fx:id="lblOrderNumber" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Order #12345" />
               <MFXButton onAction="#btnRefresh" text="Refresh" />
                </HBox>
            </center>

            <!-- RIGHT SIDE -->
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Label fx:id="lblEmployee" style="-fx-font-size: 14px;" text="Logged in as: User" />
               <MFXButton onAction="#btnLogout" text="Logout" />
                </HBox>
            </right>

        </BorderPane>
    </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <HBox fx:id="imageHboxCenter" alignment="CENTER" prefHeight="258.0" prefWidth="528.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="commentIcon" styleClass="comment-icon" visible="false" pickOnBounds="true" preserveRatio="true">
                      <image>
                          <!-- @/icons/comment.png â†’ src/main/resources/icons/comment.png -->
                          <Image url="@/dk/easv/belmanqcreport/Icons/icon.png"/>
                      </image>

                     <HBox.margin>
                        <Insets left="10" top="10" />
                     </HBox.margin>

                  </ImageView>
               </children></HBox>
         </center>
         <right>
            <HBox prefHeight="258.0" prefWidth="55.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton onAction="#btnDelete" text="X" />
               </children>
            </HBox>
         </right>
         <left>
            <HBox prefHeight="258.0" prefWidth="51.0" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </center>
   <bottom>
      <BorderPane prefHeight="84.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <center>
            <HBox prefHeight="84.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="84.0" prefWidth="101.0" HBox.hgrow="ALWAYS">
                     <children>
                        <MFXButton onAction="#btnPrevious" text="&lt;-" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </MFXButton>
                        <Label fx:id="lblImageCount" prefHeight="18.0" prefWidth="27.0" style="-fx-text-fill: black;" />
                        <MFXButton onAction="#btnNext" text="-&gt;" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </MFXButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </center>
         <left>
            <HBox alignment="CENTER" prefHeight="84.0" prefWidth="209.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton alignment="TOP_RIGHT" onAction="#btnCamera" text="Camera" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </MFXButton>
               </children>
            </HBox>
         </left>
         <right>
            <HBox alignment="CENTER" prefHeight="84.0" prefWidth="198.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton alignment="TOP_RIGHT" onAction="#btnSave" text="Save" />
               </children>
            </HBox>
         </right></BorderPane>
   </bottom>

</BorderPane>
