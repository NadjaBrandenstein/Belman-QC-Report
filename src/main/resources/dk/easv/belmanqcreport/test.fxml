                </HBox>
            </left>

            <!-- CENTER -->
            <center>
                <HBox alignment="CENTER" spacing="10.0">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Order #12345" />
                    <Button text="Refresh" />
                </HBox>
            </center>

            <!-- RIGHT SIDE -->
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Label style="-fx-font-size: 14px;" text="Logged in as: User" />
