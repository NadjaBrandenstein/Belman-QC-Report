            <HBox alignment="CENTER" prefHeight="258.0" prefWidth="528.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="285.0" fitWidth="495.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
